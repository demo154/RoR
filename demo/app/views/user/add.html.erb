<div id="container">
  <!--Adding employee details to form-->
 <h1> Employee Form </h1>

     <form action = "" method = "Post" enctype="multipart/form-data">
<!--Adding employee id  to the form-->
 <div class="userinput">
   <label> Employee Id </label>
   <input type="text" name="id" required >
  </div>
<!--Adding employee name  to the form-->
  <div class="userinput">
   <label> Employee Name  </label>
   <input type="text" name="emp_name" required >
  </div>
<!--Adding employee date of birth  to the form-->
	 <div class="userinput">
   <label> Employee Date Of Birth </label>
   <input type="date" name="dob" required>
  </div>
  <!--Adding employee gender  to the form-->

	 <div class="userinput">
   <label> Employee Gender :  </label>
   <input type="radio" name="gender" value = "Male" required>Male
   <input type="radio" name="gender" value="Female" required>Female
   <input type="radio" name="gender" value="Other" required>Other
  </div>

<!--Adding employee email  to the form-->
	  <div class="userinput">
   <label> Email </label>
   <input type="text" name="email"  required>
  </div>
<!--Adding employee phone number  to the form-->
<div class="userinput">
   <label> Employee Contact Number </label>
   <input type="number" name="phone" required>
  </div>
<!--Adding employee address  to the form-->
	 <div class="userinput">
   <label> Employee Address </label>
   <input type="text" name="address"  required>
  </div>
  <!--Adding employee blood group  to the form-->
<div class="userinput">
   <label> Employee Blood Group </label>
   <input type="text" name="blood_group"  required>
  </div>
  <!--Adding employee image  to the form-->
     <div class="userinput">
         <label>Employee Image</label>
         <input type="file" name="file" required>
     </div>

<!--Adding buttons to the form-->
  <div>

   <input type="submit" value="submit" class = "sampleBtn">

   <input type="reset"  value="Reset" class="sampleBtn">
  </div>

 </form>

 </div>

</body>
</html>
