<!--Displaying Current employee information -->
<!DOCTYPE html>
<html lang="en">
<head>
        <meta charset="UTF-8">
        <link rel="stylesheet" type="text/css" href="{{url_for('static', filename='css/style.css')}}">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <title>Logs table </title>
    <meta charset="UTF-8">
    <title>Employee Info</title>
</head>
<body>
        <header>
                <div id="logo">
                        <a href="{{url_for('dashboard')}}">
                            <img src="{{url_for('static', filename='images/df_logo-1.png')}}">
                        </a>
                    </div>
                <div id="Data">
                    <h1>Dashboard</h1>
                </div>
                <div id="signout">
                        <a href="{{url_for('login')}}"><img src="{{url_for('static', filename='images/logout.png')}}" width="80"></a>
                </div>
                </header>
                <!--Side navbar-->
                
                  <nav>
                  	<ul id="nav">
                  		<li id="Dash1"><% link_to 'Dashboard', {:action => 'dashboard'} %><span><i  class="fa fa-dashboard"></i>Dashboard</span></li>
                  		<li class="i_house"><% link_to 'Add Employee', {:action => 'add'} %><span><i  class="fa fa-user-plus"></i>Add Employee</span></li>
                  		<li class="i_house"><% link_to ' Employee Details', {:action => 'employee'} %><span><i  class="fa fa-search"></i>Employee Details</span></li>
                  		<li class="i_house"><% link_to'Update Employee',{:action => 'employee'} %><span><i  class="fa fa-user"></i>Update Employee</span></li>
                  		<li class="i_house"><% link_to 'Delete Employee',{:action => 'delete'} %><span><i  class="fa fa-trash"></i>Delete Employee</span></li>
                  		<li class="i_house"><% link_to 'Quick Search', {:action=>'search'}%><span><i  class="fa fa-search"></i>Quick Search</span></li>
                  		<li class="i_house"><% link_to 'Logs', {:action=>'logs'} %> <span><i  class="fa fa-history"></i>Logs</span></li>

                          <li class="i_house"><% link_to 'Logs Search', {:action=>'logs_search'} %> <span><i  class="fa fa-search"></i>Logs Search</span></li>

                  		<li class="i_house"><% link_to 'Sign Out', {:action=>'login'} %><span><i  class="fa fa-sign-out"></i>Sign Out</span></li>
                  	</ul>
                  </nav>
   <div id="container">

         <h1>Current Employees in office</h1>
       <button></button>

<table>
<!--Displaying checkin and checkout of an employee   in a table -->
    <tr>
    <th>EmpLoyee Id</th>
    <th>Employee Name</th>
    <th>Check In Time</th>
    <th>Check Out Time</th>
    </tr>
    {% for row in data %}
            <tr>
               <td>{{row[0]}}</td>
               <td>{{row[1]}}</td>
               <td> {{ row[2]}}</td>
               <td>{{row[3]}}</td>

            </tr>
         {% endfor %}
</table>
</div>
</body>
</html>
